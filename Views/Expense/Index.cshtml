@model IEnumerable<InAndOut.Models.Expense>
@*display data*@
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Expense List</h2>
		</div>
		<div class="col-6 text-right">
			<a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Add New Expense</a>
		</div>
	</div>
	<br />


	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						Expense Name
					</th>
					<th>
						Price
					</th>
					<th>
						Changes
					</th>
					
				</tr>
			</thead>
			<tbody>
				@foreach (var exp in Model)
				{
				<tr>
					<td width="35%">@exp.ExpenseName</td>
					<td width="35%">@exp.Price</td>
					<td width="30%">
						<div class="w-100 btn-group" role="group">
							<a class="btn btn-primary mx-1" asp-controller="Expense" asp-route-Id ="@exp.Id" asp-action="Update">Update </a>
							<a class="btn btn-danger mx-1" asp-controller="Expense" asp-route-Id ="@exp.Id" asp-action="Delete">Delete </a>

						</div>
					</td>


				</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No Item Create yet</p>
	}
</div>